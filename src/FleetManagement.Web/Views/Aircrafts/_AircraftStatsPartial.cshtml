@model IEnumerable<FleetManagement.Application.Aircrafts.DTOs.AircraftDto>
@using FleetManagement.Shared.Enums

<div class="aircraft-stats-container">
    <!-- Active -->
    <div class="stat-card">
        <div class="stat-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M10.5 21l-1-5L3 12l1-2 6.5 2L17 3l2 1-6 8.5L15 19l-2 1-2.5-5z"/>
            </svg>
        </div>
        <div class="stat-info">
            <span class="stat-number">@Model.Count(a => a.Status == AircraftStatus.Active)</span>
            <span class="stat-label">Active</span>
        </div>
    </div>

    <!-- Maintenance -->
    <div class="stat-card">
        <div class="stat-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M14.7 6.3a5 5 0 01-6.4 6.4L3 18l3 3 5.3-5.3a5 5 0 006.4-6.4z"/>
            </svg>
        </div>
        <div class="stat-info">
            <span class="stat-number">@Model.Count(a => a.Status == AircraftStatus.InMaintenance)</span>
            <span class="stat-label">Maintenance</span>
        </div>
    </div>

    <!-- Based in Jeddah -->
    <div class="stat-card">
        <div class="stat-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M12 21s-6-5.3-6-10a6 6 0 1112 0c0 4.7-6 10-6 10z"/>
                <circle cx="12" cy="11" r="2"/>
            </svg>
        </div>
        <div class="stat-info">
            <span class="stat-number">@Model.Count(a => a.Specification.BasedStation?.Equals("Jeddah", StringComparison.OrdinalIgnoreCase) == true)</span>
            <span class="stat-label">Based in Jeddah</span>
        </div>
    </div>

    <!-- Boeing -->
    <div class="stat-card">
        <div class="stat-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M3 21h18M5 21V9l7-4 7 4v12M9 21v-6h6v6"/>
            </svg>
        </div>
        <div class="stat-info">
            <span class="stat-number">@Model.Count(a => a.Manufacturer == AircraftManufacturers.Boeing)</span>
            <span class="stat-label">Boeing</span>
        </div>
    </div>


    <!-- Airbus -->
    <div class="stat-card">
        <div class="stat-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M3 21h18M5 21V9l7-4 7 4v12M9 21v-6h6v6"/>
            </svg>
        </div>
        <div class="stat-info">
            <span class="stat-number">@Model.Count(a => a.Manufacturer == AircraftManufacturers.Airbus)</span>
            <span class="stat-label">Airbus</span>
        </div>
    </div>

</div>
