@{
    Layout = "_Layout";
}



@section Styles {

    <link href="~/css/modules/aircraft/aircraft.css" rel="stylesheet" />
    <link href="~/css/modules/aircraft/aircraft-sidebar.css" rel="stylesheet" />
    <link href="~/css/modules/aircraft/aircraft-forms.css" rel="stylesheet" />

        <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&family=IBM+Plex+Sans:wght@400;500;600&display=swap" rel="stylesheet">
    
    <!-- Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <!-- Icons -->
}

<!-- Sidebar -->
<div>
    <!-- Toggle Button -->
    <button class="sidebar-toggle" id="sidebarToggle">
        <i class="fa-solid fa-xmark toggle-icon"></i>
    </button>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <div class="logo">
                <i class="fa-solid fa-plane"></i> Fleet
            </div>
        </div>

        <nav class="sidebar-menu">
            <a href="#" class="menu-item active">
                <i class="fa-solid fa-jet-fighter"></i>
                <span>Aircrafts</span>
            </a>
            <a href="#" class="menu-item">
                <i class="fa-solid fa-gears"></i>
                <span>Components</span>
                <span class="menu-badge">12</span>
            </a>
            <a href="#" class="menu-item">
                <i class="fa-solid fa-screwdriver-wrench"></i>
                <span>Maintenance Events</span>
            </a>
            <a href="#" class="menu-item">
                <i class="fa-solid fa-clipboard-list"></i>
                <span>Task Card</span>
            </a>
            <div class="menu-divider"></div>

            <a href="#" class="menu-item">
                <i class="fa-solid fa-boxes-stacked"></i>
                <span>Inventory Item</span>
            </a>
            <a href="#" class="menu-item">
                <i class="fa-solid fa-shield-halved"></i>
                <span>Insurance Policy</span>
                <span class="menu-badge">5</span>
            </a>
            <a href="#" class="menu-item">
                <i class="fa-solid fa-file-invoice-dollar"></i>
                <span>Insurance Claim</span>
            </a>
            <a href="#" class="menu-item">
                <i class="fa-solid fa-file-contract"></i>
                <span>Lease Contract</span>
            </a>
            <div class="menu-divider"></div>
            <a href="#" class="menu-item">
                <i class="fa-solid fa-folder-open"></i>
                <span>Documents Control</span>
            </a>
        </nav>
    </div>
</div>
    




@RenderBody()

@section Scripts {
    <script src="~/js/Aircrafts/aircrafts.js"></script>
    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Chart.js for demo chart -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
}
