@model FleetManagement.Application.Aircrafts.DTOs.AircraftDto
@using FleetManagement.Shared.Enums



<div class="aircraft-card" data-id="@Model.Id">
    <div class="card-body">
        <div class="info-item">
            <span class="info-label">RegNumber</span>
            <span class="info-value">@Model.RegistrationNumber</span>
        </div>
        <div class="info-item">
            <span class="info-label">Status</span>
            <span class="status-badge status-@Model.Status.ToString().ToLower()">
                @Model.Status
            </span>
        </div>
        <div class="info-item">
            <span class="info-label">Model</span>
            <span class="info-value">@Model.Model</span>
        </div>
        <div class="info-item">
            <span class="info-label">Manufacturer</span>
            <span class="info-value">@Model.Manufacturer</span>
        </div>
        <div class="info-item">
            <span class="info-label">Serial NM</span>
            <span class="info-value">@Model.SerialNumber</span>
        </div>
        <div class="info-item">
            <span class="info-label">Y of Manuf</span>
            <span class="info-value">@(Model.YearOfManufacture?.ToString() ?? "N/A")</span>
        </div>
        <div class="info-item">
            <span class="info-label">Based Station</span>
            <span class="info-value">@(string.IsNullOrEmpty(Model.Specification.BasedStation) ? "N/A" : Model.Specification.BasedStation)</span>
        </div>
        <div class="info-item">
            <span class="info-label">Seating Capacity</span>
            <span class="info-value">@Model.Specification.SeatingCapacity</span>
        </div>
        <div class="info-item">
            <span class="info-label">MTW</span>
            <span class="info-value">@Model.Specification.MaxTakeoffWeight @Model.Specification.WeightUnit</span>
        </div>
        <div class="info-item">
            <span class="info-label">MLW</span>
            <span class="info-value">@Model.Specification.MaxLandingWeight @Model.Specification.WeightUnit</span>
        </div>
        <div class="info-item">
            <div>
                <button onclick="openEditModal(@Model.Id)" class="btn btn-edit">
                    <svg width="18" height="18" viewBox="0 0 14 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                    </svg>
                </button>
                <button onclick="deleteAircraft(@Model.Id, '@Model.RegistrationNumber')" class="btn btn-delete">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                            d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                    </svg>
                </button>
            </div>
        </div>
    </div>
</div>
